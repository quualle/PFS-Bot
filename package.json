{
  "name": "xora-pfs-bot",
  "version": "2.0.0",
  "description": "XORA PFS Bot - Pflegehilfe fÃ¼r Senioren Companion",
  "private": true,
  "scripts": {
    "start": "npm run start:backend",
    "start:frontend": "cd frontend && npm start",
    "start:backend": "cd backend && python3 app.py",
    "dev": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "build": "cd frontend && npm run build",
    "postinstall": "cd frontend && npm install",
    "setup-all": "npm install && cd frontend && npm install && cd ../backend && pip3 install -r requirements.txt",
    "backend": "cd backend && python3 app.py",
    "frontend": "cd frontend && npm start"
  },
  "dependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=7.0.0"
  }
}
